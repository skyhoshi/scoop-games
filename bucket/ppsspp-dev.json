        "assets",
        "demos"
    ],
    "checkver": {
        "url": "https://buildbot.orphis.net/ppsspp/index.php",
        "regex": "v(?<basever>\\d{1,2}\\.\\d{1,2}\\.\\d{1,2})-(?<build>\\d{1,4})-g(?<commit>[a-f0-9]{9})",
        "replace": "${basever}-${build}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
